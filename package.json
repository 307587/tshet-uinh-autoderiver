{
  "name": "qieyun-autoderiver",
  "version": "0.2.0-beta.4",
  "description": "An automatic tool to generate the derivatives of the Qieyun phonological system",
  "private": true,
  "scripts": {
    "postinstall": "patch-package",
    "start": "cross-env NPM_PACKAGE_VERSION=$npm_package_version parcel ./public/index.html --dist-dir build --open --port 8080",
    "build": "cross-env NPM_PACKAGE_VERSION=$npm_package_version parcel build ./public/index.html --dist-dir build --public-url /qieyun-autoderiver --no-cache",
    "lint": "eslint ./src",
    "lint:fix": "eslint ./src --fix",
    "format": "prettier ./src --list-different",
    "format:fix": "prettier ./src --write",
    "test": "npm run lint && npm run format"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nk2028/qieyun-autoderiver.git"
  },
  "keywords": [
    "historical-linguistics",
    "middle-chinese",
    "tshet-uinh",
    "qieyun"
  ],
  "dependencies": {
    "@emotion/css": "^11.13.0",
    "@emotion/react": "^11.13.0",
    "@emotion/styled": "^11.13.0",
    "@fortawesome/fontawesome-svg-core": "^6.6.0",
    "@fortawesome/free-regular-svg-icons": "^6.6.0",
    "@fortawesome/free-solid-svg-icons": "^6.6.0",
    "@fortawesome/react-fontawesome": "^0.2.2",
    "@monaco-editor/react": "^4.6.0",
    "monaco-editor": "^0.33.0",
    "purecss": "^3.0.0",
    "qieyun": "^0.13.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sweetalert2": "^11.4.8",
    "sweetalert2-react-content": "^5.0.7",
    "yitizi": "^0.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.24.9",
    "@emotion/babel-plugin": "^11.12.0",
    "@types/node": "^22.0.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react": "^7.35.0",
    "parcel": "^2.12.0",
    "patch-package": "^8.0.0",
    "path-browserify": "^1.0.1",
    "prettier": "^3.3.3",
    "process": "^0.11.10",
    "typescript": "^5.5.4"
  },
  "browserslist": {
    "production": ">0.2% and not dead and supports es6-module",
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "author": "Ngiox Khyen 2028 Project",
  "license": "CC0-1.0",
  "bugs": {
    "url": "https://github.com/nk2028/qieyun-autoderiver/issues"
  },
  "homepage": "qieyun-autoderiver/",
  "@parcel/bundler-default": {
    "minBundleSize": 2147483647
  }
}
